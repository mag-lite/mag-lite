<%= provide :title, 'Edit Profile' %>

<div class="page-header">
  <h1><%= yield :title %></h1>
</div>

<% if flash[:notice] %>
  <div class="alert alert-info" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <strong>Oops!</strong>
    <%= @user.errors.full_messages.to_sentence %>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :email, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :target_score %>
    <%= f.text_field :target_score, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :actual_score %>
    <%= f.text_field :actual_score, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :heard_from %>
    <%= f.text_field :heard_from, :class => "form-control" %>
  </div>

  <p>
    <%= f.submit "Update Profile", class: 'btn btn-success' %>
    <%= link_to "Cancel", user_path, class: 'btn btn-link' %>
  </p>
<% end %>
